{
    "extends": ["tslint-config-airbnb", "tslint-config-prettier", "tslint-angular"],
    "rulesDirectory": ["codelyzer"],
    "rules": {
        "arrow-return-shorthand": true,
        "callable-types": true,
        "component-class-suffix": [true, "Component", "Page"],
        "component-selector": ["element", "swa", "kebab-case"],
        "deprecation": {
            "severity": "warn"
        },
        "directive-class-suffix": true,
        "directive-selector": [true, "attribute", "swa", "camelCase"],
        "import-blacklist": [true, "rxjs/Rx"],
        "interface-over-type-literal": true,
        "label-position": true,
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-duplicate-super": true,
        "no-duplicate-variable": true,
        "no-else-after-return": false,
        "no-empty-interface": true,
        "no-empty": false,
        "no-eval": true,
        "no-increment-decrement": false,
        "no-inferrable-types": [true, "ignore-params"],
        "no-input-rename": true,
        "no-misused-new": true,
        "no-non-null-assertion": true,
        "no-output-on-prefix": true,
        "no-output-rename": true,
        "no-parameter-reassignment": false,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-unnecessary-initializer": true,
        "no-unused-expression": true,
        "object-literal-sort-keys": false,
        "pipe-prefix": [true, "swa"],
        "prefer-on-push-component-change-detection": true,
        "template-no-call-expression": true,
        "trailing-comma": false,
        "unified-signatures": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true
    }
}
